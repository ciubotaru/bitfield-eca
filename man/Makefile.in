datarootdir=@datarootdir@
prefix=@prefix@
mandir=@mandir@
man_MANS=

install:
	mkdir -p $(DESTDIR)$(mandir)/man3
	for i in $(man_MANS); do install -m 644 $$i $(DESTDIR)$(mandir)/man3/$$i; done
#	ln -s x.3 $(DESTDIR)$(mandir)/man3/x.3

uninstall:
#	for i in x.3; do if [ -e $(DESTDIR)$(mandir)/man3/$$i ]; then rm -v $(DESTDIR)$(mandir)/man3/$$i; fi; done
	for i in $(man_MANS); do if [ -e $(DESTDIR)$(mandir)/man3/$$i ]; then rm -v $(DESTDIR)$(mandir)/man3/$$i; fi; done

distclean:
	rm Makefile

.PHONY: install uninstall distclean
