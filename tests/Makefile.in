TESTFILES=test1 test2 test3 test4 test5

all: build-tests run-tests

build-tests: $(TESTFILES)
$(TESTFILES): %: %.c
	$(CC) $(CFLAGS) -Wl,-rpath=$(CURDIR) -o $@ $< -L.. -I.. -leca -lbitfield

run-tests: $(TESTFILES)
	for i in $(TESTFILES); do \
	env LD_LIBRARY_PATH=$(LD_LIBRARY_PATH) ./$$i; \
	done

clean:
	rm -rvf $(TESTFILES)

distclean:
	rm Makefile

.PHONY: all build-tests run-tests clean distclean
